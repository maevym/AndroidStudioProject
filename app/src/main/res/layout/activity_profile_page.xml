<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePage"
    android:layout_margin="40dp"
    >

    <TextView
        android:id="@+id/judul_email"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:text="Email" />

    <TextView
        android:id="@+id/profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_toRightOf="@id/judul_email" />

    <TextView
        android:id="@+id/profile_username"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/judul_email"
        android:textSize="20sp"
        android:layout_marginTop="25dp" />

        <Button
            android:id="@+id/profile_button_edit_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/profile_username"
            android:text="Edit Username"
            />


        <EditText
            android:id="@+id/profile_new_username"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="New Username"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/judul_email"/>

        <Button
            android:id="@+id/profile_button_save_changes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/profile_new_username"
            android:layout_marginTop="30dp"
            android:text="Save Changes"
            />


        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:id="@+id/profile_phone"
            android:textSize="20sp"
            android:layout_below="@+id/profile_new_username"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/profile_phone_number"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/profile_phone"
            android:layout_below="@+id/profile_button_save_changes"
            android:layout_marginTop="30dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_button_delete"
            android:text="Delete Account"
            android:layout_below="@+id/profile_phone_number"
            android:layout_marginTop="100dp"
            android:backgroundTint="@color/gree2"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_button_log_out"
            android:text="Log Out"
            android:backgroundTint="@color/red"
            android:layout_below="@+id/profile_button_delete"
            android:layout_marginTop="20dp"/>
</RelativeLayout>